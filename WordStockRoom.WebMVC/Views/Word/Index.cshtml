@model IEnumerable<WordStockRoom.Models.WordListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Word", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WordName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Translation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WordName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Translation)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.WordId })
            </td>
        </tr>
    }
</table>